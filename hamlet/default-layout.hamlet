    <body :isHome:.home>
        <div #topbar>
            <div #logo>
                <a href=@{RootR}>
                    <span>Homepage
            <ul>
                <li>
                    <a href=@{RootR}book>Book
                <li>
                    <a href=@{BlogR}>Blog
                <li>
                    <a href=@{UsersR}>Browse
                <li>
                    <a href=@{WikiR mempty}>Wiki
                <li>
                    <form style=display:inline action=@{SearchR}>
                        <input type=search name=q placeholder=Search>
            <div #login>
                $maybe u <- mu
                    _{MsgLoggedInAs $ userEmail $ snd u}
                    \ #
                    <a href=@{ProfileR}>Profile
                    \ #
                    <a href=@{AuthR LogoutR}>_{MsgLogout}
                $nothing
                    ^{apLogin authBrowserId' AuthR}
        <nav #breadcrumbs>
            $forall p <- (++) fixedParents parents'
                $maybe url <- fst p
                    <a href=@?{url}>#{snd p}
                $nothing
                    \#{snd p}
                \ &gt; #
            #{pageTitle pc}
        $maybe msg <- mmsg
            <div #message>#{msg}
        ^{toWidget $ pageBody pc}
