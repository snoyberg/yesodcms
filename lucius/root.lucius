article {
    display: table;
    border-spacing: 1em;
}
.column {
    display: table-cell;
    border: 1px solid #900;
    margin-right: 5px;
    height: 100%;
    -webkit-transition: width 0.25s linear;
    padding: 0.5em;
    height: 2em;
    width: 100px;
    zoom: 0.7;
}
.column > div, .column > p {
    opacity: 0.2;
}
.init .column > div, .init .column > p {
    opacity: 1;
}

#add-article {
    zoom: 0.2;
    overflow: hidden;
}

.author {
    display: block;
    font-style: italic;
}

.column.active {
    width: 550px;
    zoom: 1;
}
.active #add-article {
    zoom: 1;
    overflow: initial;
}
.column.active > div {
    opacity: 1;
}

.column h2 {
    font-size: 1em;
}

.column:hover {
    background-color: #fee;
}
.column.active:hover {
    background-color: #fff;
}

.column.active #aloha-container {
    width: 500px !important;
}

.active .oninactive {
    display: none;
}
